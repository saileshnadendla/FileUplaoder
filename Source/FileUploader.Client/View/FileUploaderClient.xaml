<Window x:Class="FileUploader.Client.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Upload Client" Height="520" Width="900">
    <DockPanel>
        <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Top">
            <Button Content="Select Files" Width="120" Margin="0,0,8,0" Command="{Binding OnSelectFiles}"/>
            <Button Content="Upload" Width="120" Command="{Binding OnUploadFiles}"/>
        </StackPanel>
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" Margin="8" ItemsSource="{Binding Files}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="JobId" Binding="{Binding JobId}" Width="220"/>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Size (MB)" Binding="{Binding SizeMB}" Width="110"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Progress" Binding="{Binding Progress}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
